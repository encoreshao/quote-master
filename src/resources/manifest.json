{
  "manifest_version": 3,
  "short_name": "Nexus Tab",
  "name": "Nexus Tab: Your Daily Command Center",
  "version": "2.0.1",
  "description": "A modular productivity dashboard for your new tab. Tasks, bookmarks, quick links, RSS feeds in a glassmorphism UI.",
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "author": {
    "name": "Encore Shao",
    "email": "encore.shao@gmail.com"
  },
  "homepage_url": "https://ranbot.online",
  "permissions": [
    "storage",
    "bookmarks",
    "tabs",
    "contextMenus",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content_scripts.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*;"
  }
}
